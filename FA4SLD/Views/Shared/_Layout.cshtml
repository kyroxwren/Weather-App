<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FA4SLD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FA4SLD.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #001e2d; color: white; box-shadow: 0px 2px 5px #45f3ff;">
            <div class="container-fluid">
                <a class="navbar-brand" style="color:white;" asp-area="" asp-controller="Home" asp-action="Index">Gauteng Weather Search</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <!-- Modified class: justify-content-end -->
                    <ul class="navbar-nav">
                        <!-- Removed class: flex-grow-1 -->
                        <li class="nav-item">
                            <a class="nav-link" style="color:white;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <partial style="color:white;" name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
       
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer" style="background-color: #001e2d; ">
        <div class="container" style="color: white; display: flex; justify-content: center;">
            Murunwa, Lefa, Lesedi, Vuyani, Ofentse, Lebogang, Bokang
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
